<div class="container">
  <h1>Edit {{ contact.first_name }}</h1>
  <hr>
  <form method="POST" action="/contacts/{{ contact.id }}?_method=PUT" class="well">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="first-name">First Name</label>
          <input type="text" class="form-control" id="first-name" value= "{{ contact.first_name}}" name="first-name">
        </div>

      <!-- LAST NAME -->
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="last-name">Last Name</label>
          <input type="text" class="form-control" id="last_name" value= "{{ contact.last_name }}" name="last-name">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      </div>

      <!-- PHONE -->
      <div class="col-md-6">
        <div class="form-group">
          <label for="phone-number">Phone</label>
          <input type="text" class="form-control" id="phone-number" value= "{{ contact.phone_number}}" name="phone-number">
        </div>
      </div>
    </div>

    <!-- EMAIL -->
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="email-address">Email Address</label>
          <input type="text" min="0" max="10" class="form-control" id="email-address" value= "{{ contact.email_address}}" name="email-address">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
